<div class="profile-container">
  <% if current_user %>
    <div class="profile-card">
      <div class="profile-summary">
        <h2><%= current_user.username %></h2>
      </div>
      <div class="edit-profile">
        <%= link_to "Edit Profile", edit_user_registration_path, class: "profile-link" %>
      </div>
    </div>
  <% end %>
</div>
