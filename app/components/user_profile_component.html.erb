<div class="profile-container">
  <% if current_user %>
    <div class="profile-card">
      <div class="profile-summary">
        <h2><%= username %></h2>
        <p><%= first_name %> <%= last_name %></p>
      </div>
      <div class="edit-profile">
        <%= link_to "ðŸ–‰", edit_user_registration_path, class: "edit-profile-link" %>
      </div>
    </div>
      <div class="bio-city">
        <p><%= current_user.city %></p>
        <p><%= current_user.bio %></p>
      </div>
    <div class="profile-interest">
      <div class="user-profile-interest">
        <h5>programming languages</h5>
        <div class="language">
          <% current_user.programming_languages.each_with_index do |language, index|  %>
            <% next if index == 0 %>
            <p><%= language %></p>
          <% end %>
        </div>
      </div>
      <div class="user-profile-interest">
        <h5>Topic of interest</h5>
        <div class="topic">
        <p><%= current_user.topic_interest%></p>
        </div>
      </div>
    </div>
    <div class="followers">
      <p>Followers:</p>
      <p>Following:</p>
    </div>
  <% end %>
</div>
