    <div class="codebuddy-logo">
      <strong style="color: blue; font-size: 24px;">CodeBuddy</strong>
    </div>
    <div class="nav-buttons" style="float: right;">
      <%= link_to "Profile", user_path(current_user.id), class: "profile-link" %>
