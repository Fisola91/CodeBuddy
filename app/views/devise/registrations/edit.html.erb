<div class="user-edit-container">

  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <%= f.input :username,
                  required: true,
                  disabled: true,
                  autofocus: true,
                  label: 'Username',
                  input_html: { autocomplete: "nickname" }%>
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "first_name" }%>
      <%= f.input :last_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "last_name" }%>
      <%= f.input :current_password,
                  required: true,
                  autofocus: true,
                  hint: "we need your current password to confirm your changes",
                  input_html: { autocomplete: "new-password" }%>
      <%= f.input :city,
                  required: false,
                  input_html: { autocomplete: "city" } %>
      <%= f.input :gender,
                  required: false,
                  input_html: { autocomplete: "age" } %>
      <%= f.input :bio,
                  required: false,
                  label: 'Your story'
                   %>
      <%= f.input :linkedin_link,
                  required: false,
                  input_html: { autocomplete: "about_me" } %>
      <%= f.input :github_link,
                  required: false,
                  input_html: { autocomplete: "about_me" } %>
      <%= f.input :programming_languages,
                  as: :select,
                  collection: User::LANGUAGES,
                  include_hidden: false,
                  input_html: {multiple: true}
                    %>
      <%= f.input :topic_interest,
                  as: :select,
                  collection: ["Web Development", "Data Science"]
                   %>
    </div>

      <div class="actions">
        <%= f.submit "Update" %>
      </div>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "Back", :back %>
</div>
